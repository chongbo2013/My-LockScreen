<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/recommendapp_height"
        android:layout_height="@dimen/recommendapp_height"
        android:layout_centerHorizontal="true"
        android:src="@drawable/recommendappicon" />

    <!--<ImageView
        android:id="@+id/img_recommend"
        android:layout_width="@dimen/recommendapp_height"
        android:layout_height="@dimen/recommendapp_height"
        android:layout_centerHorizontal="true"
        android:src="@drawable/recommend_icon"
        android:visibility="gone"/>-->


    <!--android:background="#b3000000"-->
    <ImageView
        android:id="@+id/img_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pause"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_icon"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textSize="@dimen/recommendappname_size"
        android:layout_marginTop="4dp"
        android:text="@string/hello_world" />

    <ProgressBar
        android:id="@+id/download_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/recommend_progress_drawable"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_name"
        android:layout_gravity="center|bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:visibility="invisible"
        android:max="100" />

</RelativeLayout>
